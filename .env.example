# Ders Programı Yönetim Sistemi
# Environment Configuration

# Application
APP_NAME="Ders Programı Sistemi"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost/ders_programi

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=ders_programi
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_turkish_ci

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-client-id-here
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost/ders_programi/admin/google-callback.php

# Session
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# Security
CSRF_TOKEN_NAME=csrf_token
HASH_ALGO=sha256

# Mail (Opsiyonel)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ankara.edu.tr
MAIL_FROM_NAME="${APP_NAME}"

# Cache
CACHE_DRIVER=file
CACHE_PATH=storage/cache

# Logs
LOG_CHANNEL=file
LOG_PATH=storage/logs
LOG_LEVEL=debug

# Timezone
TIMEZONE=Europe/Istanbul

# Locale
LOCALE=tr_TR
FALLBACK_LOCALE=en_US
