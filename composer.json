{
    "name": "course-schedule/analysis",
    "description": "Course Schedule Management System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ankara University",
            "email": "ufuktanyeri@ankara.edu.tr"
        }
    ],
    "require": {
        "php": ">=7.4",
        "google/apiclient": "^2.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Core\\": "core/"
        },
        "files": [
            "config/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
